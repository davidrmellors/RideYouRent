@page
@model CLDVPOE.Pages.Returns.PenaltyModel
@{
    Layout = "~/Pages/Shared/_dashboard.cshtml";
}
<div class="p-5">
    <br>
    <h2>Calculate Fine</h2>

    @if (Model.errorMessage.Length > 0)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@Model.errorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post">
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">ReturnID</label>
            <div class="col-sm-6">
                <select class="form-select" name="returnID">
                    @foreach (var item in IndexModel.listReturns)
                    {
                        <option value="@item.returnID">@item.returnID</option>
                    }
                </select>
            </div>
        </div>
        @if (Model.successMessage.Length > 0)
        {
            <div class="row mb-3">
                <div class="col-sm-9">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>@Model.successMessage</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        }

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Calculate</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-primary" href="/Returns/Index" role="button">Cancel</a>
            </div>
        </div>
    </form>

    @if (Model.formSubmitted == true)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>returnID</th>
                    <th>fine</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.returns.returnID</td>
                    <td>@Model.returns.fine</td>
                </tr>
            </tbody>
        </table>
        <div class="row mb-3">
            <div class="col-sm-3 d-grid">
                <a class="btn btn-primary" href="/Returns/Index">Done</a>
            </div>
        </div>
    }
</div>