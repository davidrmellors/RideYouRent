@page
@model CLDVPOE.Pages.Rentals.CreateModel
@{
    Layout = "~/Pages/Shared/_dashboard.cshtml";
}
<div class="p-5">
    <br>
    <h2>New Rental</h2>

    @if (Model.errorMessage.Length > 0)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@Model.errorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post">
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">carID</label>
            <div class="col-sm-6">
                <select class="form-select" name="carID">
                    @foreach(var item in Cars.IndexModel.listCars)
                    {
                        if (item.available.Equals("True"))
                        {
                            <option value="@item.carID">@item.carID</option>
                        }
                        
                    }
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">inspectorID</label>
            <div class="col-sm-6">
                <select class="form-select" name="inspectorID">
                    @foreach (var item in Inspectors.IndexModel.listInspectors)
                    {
                        <option value="@item.inspectorID">@item.inspectorID</option>
                    }
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">driverID</label>
            <div class="col-sm-6">
                <select class="form-select" name="driverID">
                    @foreach (var item in Drivers.IndexModel.listDrivers)
                    {
                        <option value="@item.driverID">@item.driverID</option>
                    }
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">RentalFee</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="rentalFee" value="@Model.rentals.rentalFee" />
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">startDate</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="startDate" value="@Model.rentals.startDate" />
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">endDate</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="endDate" value="@Model.rentals.endDate" />
            </div>
        </div>


        @if (Model.successMessage.Length > 0)
        {
            <div class="row mb-3">
                <div class="col-sm-9">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>@Model.successMessage</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        }

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-primary" href="/Rentals/Index" role="button">Cancel</a>
            </div>
        </div>
    </form>
</div>