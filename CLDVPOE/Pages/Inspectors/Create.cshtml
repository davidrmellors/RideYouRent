@page
@model CLDVPOE.Pages.Inspectors.CreateModel
@{
    Layout = "~/Pages/Shared/_dashboard.cshtml";
}

<div class="p-5">
    <br>
    <h2>Create Inspector</h2>

    @if (Model.errorMessage.Length > 0)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@Model.errorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post">
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">inspectorID</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="inspectorID" value="@Model.inspectors.inspectorID" />
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">inspectorName</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="inspectorName" value="@Model.inspectors.inspectorName" />
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">inspectorEmail</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="inspectorEmail" value="@Model.inspectors.inspectorEmail" />
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">inspectorMobileNumber</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="inspectorMobileNumber" value="@Model.inspectors.inspectorMobileNumber" />
            </div>
        </div>
        @if (Model.successMessage.Length > 0)
        {
            <div class="row mb-3">
                <div class="col-sm-9">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>@Model.successMessage</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        }

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-primary" href="/Inspectors/Index" role="button">Cancel</a>
            </div>
        </div>
    </form>
</div>